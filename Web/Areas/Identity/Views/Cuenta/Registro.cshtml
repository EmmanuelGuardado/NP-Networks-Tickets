@model Web.Areas.Identity.ViewsModels.UsuarioViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-4">
        <div class="row justify-content-center">
            <svg width="150" height="150" viewBox="0 0 16 16" class="text-primary  bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
            </svg>
        </div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Usuario" asp-for="Usuario">
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Contraseña" asp-for="Contrasena">
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirmar Contraseña" asp-for="ValidarContrasena">
                    <span asp-validation-for="ValidarContrasena" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Registrar</button>
            </div>
        </form>
    </div>
</div>

