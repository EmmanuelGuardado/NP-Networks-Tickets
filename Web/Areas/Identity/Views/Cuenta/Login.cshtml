@model Web.Areas.Identity.ViewsModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-4">
        <img src="~/images/logo-np2.jpg" alt="logo" class="img-fluid" />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Usuario" type="email" class="form-control" placeholder="Usuario">
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Contraseña">
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Recordarme" type="checkbox" class="form-check-input">
                <label asp-for="Recordarme" class="form-check-label">Recordarme</label>
            </div>
            <div>
                <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
            </div>
        </form>
    </div>
</div>
